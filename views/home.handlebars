<div class="panel" id="roster">
    <p>
    <h2>Nasz skład</h2>
    </p>

    <h3>Tankowie</h3>
    <div class="role">
        {{#each tanks}}
            <div class="raider"><a href="https://worldofwarcraft.com/en-gb/character/burning-legion/{{ nick }}" class="{{ class }} font-weight-bold">{{ nick }}</a></div>
        {{/each}}
    </div>

    <br><br>

    <h3>Healerzy</h3>
    <div class="role">
        {{#each healers}}
            <div class="raider"><a href="https://worldofwarcraft.com/en-gb/character/burning-legion/{{ nick }}" class="{{ class }} font-weight-bold">{{ nick }}</a></div>
        {{/each}}
    </div>

    <br><br>
    <h3>rDPS</h3>
    <div class="role">
        {{#each rdps}}
            <div class="raider"><a href="https://worldofwarcraft.com/en-gb/character/burning-legion/{{ nick }}" class="{{ class }} font-weight-bold">{{ nick }}</a></div>
        {{/each}}
    </div>

    <br><br>
    <h3>mDPS</h3>
    <div class="role">
        {{#each mdps}}
            <div class="raider"><a href="https://worldofwarcraft.com/en-gb/character/burning-legion/{{ nick }}" class="{{ class }} font-weight-bold">{{ nick }}</a></div>
        {{/each}}
    </div>
</div>

<div class="panel" id="aplikuj">
    <p>
        <h2>Dołącz do nas!</h2>
    </p>
    <div id="contact-form">
        <input type="text" id="nick" class="form-control float-left sds" placeholder="Nick...">
        <input type="text" id="btag" class="form-control float-left" placeholder="Battletag...">
        <textarea id="about" class="form-control float-left" placeholder="Napisz coś o sobie..."></textarea>
        <button onclick="sendMail(document.getElementById('nick').value, document.getElementById('btag').value, document.getElementById('about').value)" class="btn btn-primary float-right">Wyślij!</button>
    </div>

</div>









